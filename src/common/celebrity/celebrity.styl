.celebrityContent
  margin-bottom 30px
  .celebrityContentImgWrapper
    display inline-block
    width 135px
    height 191px
    margin-right 15px
    vertical-align top
    img
      width 100%
  .celebrityContentDesc
    width 350px
    display inline-block
    font-size 13px
    line-height 22px
    margin-right 20px
    .label
      margin-right 8px
    a
      color #258dcd
      margin-right 5px
.celebrityDetail
  .celebrityDetailTitle
    margin-bottom 15px
  .celebrityDetailContent
    line-height 22px
    font-size 13px
    word-wrap break-word
    overflow hidden
    text-indent 2em
.recentWorks
  margin-top 30px
  .recentWorksTitle
    margin-bottom 20px
  .recentWorksList
    .recentWorksItem
      width 115px
      float left
      margin-right 25px
      &:last-child
        margin-right 0
      .recentWorksItemTitle
        color: #999
        background: none
        font-size: 16px
        text-align: left
        letter-spacing: 0.1em
        margin-bottom 10px
        height: 29px
        line-height 29px
      .recentWorksImgWrapper
        width 115px
        height 160px
        overflow: hidden
        .recentWorksImg
          width 100%
      .recentWorksInfo
        font-size 13px
        cursor pointer
        color #3377aa
      .score
        text-align center
        color #e09015
        line-height 30px
        font-size 12px
