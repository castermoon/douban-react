.searchList
  line-height 32px
  .searchItem
    display flex
    border-top 1px dashed #ccc;
    padding 15px 0
    .searchItemLeft
      height 97px
      flex 0 0 65px
      margin-right 15px
      img
        width 100%
    .searchItemRight
      flex 1
      .movieName
        cursor pointer
        color #3377aa
        margin-right 10px
      .starWrapper
        margin-right 10px
        width 55px
        display inline-block
      .score
        color #e09015
      .date,.movieDesc
        color:#666
        font-size 13px

