.commentListItem
  overflow hidden
  width 100%
  padding 12px 0
  border-bottom 1px solid #ddd
  .iconWrapper
    width 48px
    height 48px
    float left
    margin-right 15px
    img
      width 100%
  .commentDesc
    float left
    padding 5px 0
    width 600px
    font-size 13px
    .commentDescHeader
      width 100%
      height 22px
      margin-bottom 6px
      font-size 13px
      .icon
        display inline-block
        width 24px
        height 24px
        margin-right 10px
      .name
        display inline-block
        margin-right 10px
      .starWrapper
        display inline-block
        width 60px
        margin-left 10px
      .date
        margin-left 10px
        color #aaa
      .useful
        display inline-block
        float right
    .commentContent
      line-height 21px
      font-size 13px
