.star
  display flex
  .starItem
    width 12px
    height 12px
    flex 1
    &.half
      background url("./star24_half@2x.png") no-repeat center
      background-size 12px 12px
    &.on
      background url("./star24_on@2x.png") no-repeat center
      background-size 12px 12px
    &.off
      background url("./star24_off@2x.png") no-repeat center
      background-size 12px 12px
