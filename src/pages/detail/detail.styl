.clearfix:after
  content: "."
  display: block
  clear: both
  visibility: hidden
  height: 0
  font-size:0
.movieContent
  .movieContentImgWrapper
    display inline-block
    width 135px
    height 191px
    margin-right 15px
    vertical-align top
    img
      width 100%
  .movieContentDesc
    width 329px
    display inline-block
    font-size 13px
    line-height 22px
    margin-right 20px
    margin-bottom 10px
  .movieContentScore
    padding-left 15px
    vertical-align top
    display inline-block
    border-left 1px solid #eaeaea
    color #9b9b9b
    .movieContentScoreTitle
      font-size 12px
      color #9b9b9b
      margin-bottom 14px
    .scoreLine
      .num
        float left
        color #494949
        font-size 28px
        margin-right 12px
      .starWrapper
        float left
        line-height 30px
        display inline-block
        width 90px
        a
          font-size 12px
          color #000
  .movieButtonList
    .movieButtonItem
      cursor pointer
      display inline-block
      font-size 13px
      margin-right 20px
.movieBrief
  text-indent 2em
  font-size 13px
  line-height 20px
.movie_list_recommend
  margin-bottom: 40px;
  line-height 22px
  .recommend_list
    border-top: 1px dashed #DDD;
    .recommend_item
      padding: 4.5px 0;
      border-bottom: 1px dashed #DDD;
      color #3377AA
      font-size 13px
.commentList
  width 100%
.longCommentsList
  line-height 25px
