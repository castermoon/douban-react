.tab
  width 100%
  .tabHeader
    position relative
    width 100%
    height 35px
    line-height 35px
    border-bottom 1px solid #ccc
    .tabHeaderItem
      background #fff
      width 64px
      float left
      height 35px
      font-size 14px
      text-align center
      &.isActive
        color #258dcd
        border-bottom 5px solid #000
    .writeShortComment
      width 106px
      height 27px
      text-align center
      line-height 27px
      color: #ca6445
      background: #fae9da
      position absolute
      top 0
      right 0
      cursor pointer
      &.writeShortComment:hover
        background: #fad
  .tabBody
    width 100%
    //height 1000px
    margin-top 5px
    .commentFilter
      height 40px
      line-height 40px
      width 100%
      border-bottom 1px solid #ccc
      label
        font-size 14px
        margin-right 25px
        input
          margin-right 8px
    .commentList
      width 100%
